<%= form_with model: review do |f| %>
  <fieldset>
    <%= f.label 'My review' %>
    <%= f.text_field :body %>
    <%= f.label 'Score' %>
    <%= f.collection_radio_buttons :score, [-1, 0, 1, 2], :to_i, :to_s %>
    <%= f.hidden_field :game_id %>
  </fieldset>

  <%= f.submit 'Save review' %>
<% end %>
