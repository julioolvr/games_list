<%= form_with model: review do |f| %>
  <div class="form-group">
    <%= f.label 'My review' %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <%= f.label 'Score' %>
  <%= f.collection_radio_buttons :score, Review::SCORES, :to_i, -> (score) { score_icon(score) || score } do |b| %>
    <div class="form-check">
      <%= b.radio_button(class: 'form-check-input') + b.label(class: 'form-check-label') %>
    </div>
  <% end %>

  <%= f.hidden_field :game_id %>
  <%= f.submit('Save review', class: 'btn btn-primary') %>
<% end %>
