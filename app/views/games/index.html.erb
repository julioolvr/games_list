<p id="notice"><%= notice %></p>

<%= search_form_for @q do |f| %>
  <div class="form-row">
    <div class="form-group col-md">
      <%= f.label :name %>
      <%= f.search_field :name_cont, class: 'form-control' %>
    </div>

    <div class="form-group col-md">
      <%= f.label :platform %>
      <%=
        f.collection_select :platforms_id_eq, Platform.all, :id, :name, { include_blank: 'All' }, class: 'form-control'
      %>
    </div>
  </div>

  <%= f.submit(class: 'btn btn-secondary') %>
<% end %>

<table class="table mt-3">
  <thead>
    <tr>
      <th>Name</th>
      <th>Platforms</th>
      <th>Reviews</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= link_to game.name, game %></td>
        <td>
          <% game.platforms.each do |platform| %>
            <%= platform_badge(platform) %>
          <% end %>
        </td>
        <td>
          <% if game.reviews.any? %>
            <% if game.reviews.stars.any? %>
              <div>
                <%= score_icon(Review::STAR) %>
                <% game.reviews.stars.each do |review| %>
                  <img src="<%= avatar_url(review.user) %>" class="avatar" />
                <% end %>
              </div>
            <% end %>

            <% if game.reviews.up.any? %>
              <div><%= score_icon(Review::THUMBS_UP) %> x<%= game.reviews.up.count %></div>
            <% end %>

            <% if game.reviews.down.any? %>
              <div><%= score_icon(Review::THUMBS_DOWN) %> x<%= game.reviews.down.count %></div>
            <% end %>
          <% else %>
            <em>None</em>
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

